<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task1Main">

    <Button
        android:id="@+id/buttonHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate Calculation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/buttonRespiratoryRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respiratory Rate Calculation"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonHeartRate"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/buttonSymptomLogging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symptom Logging and Diagnosis"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonRespiratoryRate"
        android:layout_marginTop="50dp"/>


</RelativeLayout>
