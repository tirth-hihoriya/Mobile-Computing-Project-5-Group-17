<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/Activityheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Your Desired Action"
            android:textAlignment="center"
            android:padding="16dp"
            style="?android:attr/listSeparatorTextViewStyle"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/button_add_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Add New Schedule" />

        <Button
            android:id="@+id/RetrieveScheduleforTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Retrieve Schedule for specific class" />
        <Button
            android:id="@+id/ReportSymptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="If you're not feeling well\n WARNING!!! \n Mail Superiors" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>